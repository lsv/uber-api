{
    "name": "lsv/phpuberapi",
    "description": "API for Uber",
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Aarhof",
            "email": "martin.aarhof@gmail.com"
        }
    ],
    "require": {
        "doctrine/collections": "^1.3",
        "guzzlehttp/guzzle": "^6.0",
        "willdurand/geocoder": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Lsv\\UberApi\\" : "src"
        }
    },
    "suggest": {
        "league/oauth2-client" : "For generating oauth2 client"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7",
        "phpmd/phpmd": "^2.2",
        "sebastian/phpcpd": "^2.0",
        "phploc/phploc": "^2.1",
        "phing/phing": "^2.11",
        "satooshi/php-coveralls": "^0.6.1",
        "squizlabs/php_codesniffer": "^2.3",
        "fabpot/php-cs-fixer": "^1.10",
        "league/oauth2-client": "^1.0",
        "phpdocumentor/phpdocumentor": "^2.8"
    },
    "autoload-dev": {
        "psr-4": {
            "Lsv\\UberApiTest\\" : "tests"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
